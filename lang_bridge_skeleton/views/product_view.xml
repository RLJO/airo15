<odoo>
	<data>
	<record id="ecomm_product_template_form_view" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Meta Data" name="ecomm_meta_data">
						<group col="2">
							<field name="meta_tag_title"/>
							<field name="meta_tag_description"/>
							<field name="meta_tag_keyword"/>
							<field name='product_tag'/>
						</group>

						<group col="2">
							<field name='oc_description' widget='html'/>
						</group>
					</page>
				</notebook>
			</field>
		</record>
	</data>
</odoo>